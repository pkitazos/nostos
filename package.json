{
  "name": "nostos-cms",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "payload:generate": "pnpm payload:generate:types && pnpm payload:generate:gql",
    "payload:generate:types": "payload generate:types",
    "payload:generate:gql": "payload generate:graphQLSchema",
    "payload:seed": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload seed",
    "db:init": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts tsx scripts/database/init.ts",
    "db:reset": "pnpm docker:down:clean && pnpm docker:up && pnpm db:init",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:down:clean": "docker compose down -v",
    "docker:logs": "docker compose logs -f",
    "docker:logs:db": "docker compose logs -f db",
    "docker:logs:minio": "docker compose logs -f minio",
    "dev:local": "pnpm docker:up && pnpm dev",
    "dev:fresh": "pnpm db:reset && pnpm dev",
    "build:full": "pnpm payload:generate && pnpm build"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@payloadcms/db-vercel-postgres": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/payload-cloud": "latest",
    "@payloadcms/richtext-lexical": "latest",
    "@payloadcms/storage-s3": "3.14.0",
    "@payloadcms/storage-vercel-blob": "3.14.0",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@sendgrid/mail": "^8.1.4",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "embla-carousel-react": "^8.5.1",
    "graphql": "^16.8.1",
    "lucide-react": "^0.469.0",
    "next": "15.1.0",
    "next-themes": "^0.4.4",
    "payload": "^3.14.0",
    "pg": "^8.13.1",
    "react": "19.0.0-rc-65a56d0e-20241020",
    "react-dom": "19.0.0-rc-65a56d0e-20241020",
    "react-hook-form": "^7.54.2",
    "react-social-media-embed": "^2.5.17",
    "resend": "^4.1.2",
    "sharp": "0.32.6",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.5.4",
    "@types/pg": "^8.11.11",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.1.0",
    "postcss": "^8.4.49",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  }
}
